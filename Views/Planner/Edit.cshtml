                            document.getElementById(textBoxID).disabled = bEnable
                            document.getElementById(textBoxID + "1").disabled = bEnable
                            document.getElementById(textBoxID + "2").disabled = bEnable
                            document.getElementById(textBoxID + "3").disabled = bEnable
                            document.getElementById(textBoxID + "4").disabled = bEnable
                            document.getElementById(textBoxID + "1").required = !bEnable
                            document.getElementById(textBoxID + "2").required = !bEnable
                            document.getElementById(textBoxID + "3").required = !bEnable
                            document.getElementById(textBoxID + "4").required = !bEnable
                        }
                                        </script>
                                    </div>



